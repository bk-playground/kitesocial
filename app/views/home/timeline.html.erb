<%= form_with model: Chirp.new do |form| %>
  <%= form.label :content, "What's up?" %><br>
  <%= form.text_field :content, required: true %>
  <%= form.submit "Chirp!" %>
<% end %>

<p><%= link_to("See what everyone's saying", firehose_path) %></p>

<%= turbo_stream_from ["timeline", current_user.id] %>

<div id="timeline">
  <%= render @timeline %>
</div>
