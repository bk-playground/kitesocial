<h2><%= @user.name %></h2>

<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= button_to "Unfollow", user_follow_path(@user), method: :delete %>
  <% else %>
    <%= button_to "Follow", user_follow_path(@user) %>
  <% end %>
<% end %>

<%= turbo_stream_from ["chirps", @user.id] %>

<div id="chirps">
  <%= render @chirps %>
</div>
